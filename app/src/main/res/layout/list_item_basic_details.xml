<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/divider_inset"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/image_view_margin"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@android:color/black"
        android:padding="@dimen/image_view_border" />


    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/image_view_margin"
        android:layout_marginTop="@dimen/image_view_margin"
        android:layout_weight="3"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/text_title"
            android:layout_column="0"
            android:layout_columnSpan="2"

            android:layout_row="0"
            android:textColor="@color/textDarkBg87"
            android:textSize="@dimen/font_large" />

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/release_date_prefix" />

        <TextView
            android:id="@+id/text_release"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingLeft="@dimen/release_rating_padding"
            android:textSize="@dimen/font_small" />

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/rating_prefix" />

        <TextView
            android:id="@+id/text_rating"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingLeft="@dimen/release_rating_padding"
            android:textSize="@dimen/font_small" />
    </GridLayout>


</LinearLayout>