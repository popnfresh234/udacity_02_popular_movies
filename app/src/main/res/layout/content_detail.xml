<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/image_view_margin"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@android:color/black"
                android:padding="@dimen/image_view_border" />


            <GridLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_view_margin"
                android:layout_marginTop="@dimen/image_view_margin"
                android:layout_weight="3"
                android:columnCount="2"
                android:rowCount="3">

                <TextView
                    android:id="@+id/text_title"
                    android:layout_column="0"
                    android:layout_columnSpan="2"

                    android:layout_row="0"
                    android:textColor="@color/textDarkBg87"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="@string/release_date_prefix" />

                <TextView
                    android:id="@+id/text_release"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:paddingLeft="@dimen/release_rating_padding"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="@string/rating_prefix" />

                <TextView
                    android:id="@+id/text_rating"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:paddingLeft="@dimen/release_rating_padding"
                    android:textSize="@dimen/font_small" />
            </GridLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/text_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="BLAH BLAH BVLA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>