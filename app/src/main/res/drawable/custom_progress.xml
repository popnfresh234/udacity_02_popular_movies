<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false">
        <size
            android:width="48dp"
            android:height="48dp" />

        <gradient
            android:centerColor="#809175B4"
            android:centerY="0.5"
            android:endColor="#FF9175B4"
            android:startColor="#009175B4"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>
